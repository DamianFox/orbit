# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /category/list.json         controllers.Category.list()
GET     /category/:cat_id           controllers.Category.by_id(cat_id: Integer)
GET     /report/most-common         controllers.Report.most_common()
#GET     /report/recent              controllers.

GET     /report/:report_id          controllers.Report.by_id(report_id: Integer)




# Some testing pages
GET     /prova                      controllers.Application.prova()
GET     /test/db                    controllers.Application.dbtest()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
